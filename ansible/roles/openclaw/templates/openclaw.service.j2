[Unit]
Description=OpenClaw AI Agent Gateway - {{ agent_name }}
After=network.target ollama.service
Requires=ollama.service

[Service]
Type=simple
User={{ openclaw_service_user }}
WorkingDirectory=/home/{{ openclaw_service_user }}/.openclaw
Environment="NODE_ENV=production"
EnvironmentFile=/home/{{ openclaw_service_user }}/.openclaw/.env
ExecStart=/usr/bin/openclaw gateway --config /home/{{ openclaw_service_user }}/.openclaw/openclaw.json --port {{ openclaw_dashboard_port }}
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
