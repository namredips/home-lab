# OpenClaw Configuration for {{ agent_name }}
# Agent: {{ agent_name }} ({{ agent_email }})

# Agent identity
agent:
  name: {{ agent_name }}
  email: {{ agent_email }}

# LLM providers
llm:
  # Primary provider: Anthropic Claude
  anthropic:
    enabled: true
    api_key: ${ANTHROPIC_API_KEY}
    model: claude-sonnet-4-5-20250929

  # Secondary provider: OpenAI
  openai:
    enabled: true
    api_key: ${OPENAI_API_KEY}
    model: gpt-4

  # Tertiary provider: Google Gemini
  google:
    enabled: true
    api_key: ${GOOGLE_API_KEY}
    model: gemini-pro

# Communication platforms
integrations:
  discord:
    enabled: true
    guild_id: {{ discord_guild_id }}
    bot_token: ${DISCORD_BOT_TOKEN}
    default_channel: "general"

# Features
features:
  memory:
    enabled: {{ openclaw_enable_memory | lower }}
    storage_path: {{ openclaw_install_dir }}/memory

  web_dashboard:
    enabled: {{ openclaw_enable_web_dashboard | lower }}
    port: {{ openclaw_dashboard_port }}

  terminal:
    enabled: true
    sandbox_mode: main

  web_browsing:
    enabled: true
    headless: true

# Logging
logging:
  level: {{ openclaw_log_level }}
  path: {{ openclaw_install_dir }}/logs
