# Tuwunel configuration file
# Generated by Ansible

[server]
server_name = "{{ tuwunel_server_name }}"
bind_address = "{{ tuwunel_bind_address }}"
port = 8448

[database]
# SQLite database (default)
database = "sqlite:///var/lib/tuwunel/homeserver.db"

[federation]
# Disable federation for internal-only use
enabled = {{ 'true' if tuwunel_federation_enabled else 'false' }}

[registration]
# Disable public registration (manual user creation only)
enabled = {{ 'true' if tuwunel_registration_enabled else 'false' }}

[logging]
# Log level (debug, info, warn, error)
level = "info"

[media]
# Media storage configuration
store_path = "/var/lib/tuwunel/media_store"
max_upload_size = "50M"
