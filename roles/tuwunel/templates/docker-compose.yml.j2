---
services:
  tuwunel:
    image: {{ tuwunel_image }}
    container_name: {{ tuwunel_container_name }}
    restart: unless-stopped
    ports:
      - "{{ tuwunel_bind_address }}:{{ tuwunel_port }}:8448"
    volumes:
      - {{ tuwunel_data_dir }}/data:/var/lib/tuwunel
      - {{ tuwunel_data_dir }}/media:/var/lib/tuwunel/media_store
      - {{ tuwunel_data_dir }}/config/tuwunel.toml:/etc/tuwunel/tuwunel.toml:ro
    environment:
      - TUWUNEL_SERVER_NAME={{ tuwunel_server_name }}
      - TUWUNEL_REPORT_STATS=no
